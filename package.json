{
    "name": "vue-mobile",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "amfe-flexible": "^2.2.1",
        "core-js": "^2.6.5",
        "vant": "^2.1.4",
        "vue": "^2.6.10",
        "vue-router": "^3.0.3",
        "axios": "^0.18.0",
        "lodash": "^4.17.21",
        "moment": "^2.24.0",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.10.0",
        "@vue/cli-plugin-eslint": "^3.10.0",
        "@vue/cli-service": "^3.10.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "node-sass": "^4.9.0",
        "postcss-pxtorem": "^4.0.1",
        "sass-loader": "^7.1.0",
        "vue-template-compiler": "^2.6.10"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended"
        ],
        "rules": {
            "generator-star-spacing": "off",
            "semi": [
                "error",
                "always"
            ],
            "no-tabs": "off",
            "no-mixed-spaces-and-tabs": "off",
            "no-unused-vars": "off",
            "indent": [
                "error",
                4
            ],
            "eqeqeq": 1
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
